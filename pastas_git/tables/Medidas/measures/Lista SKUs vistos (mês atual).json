{
  "name": "Lista SKUs vistos (mês atual)",
  "expression": [
    "",
    "VAR _t =",
    "    ADDCOLUMNS(",
    "        VALUES(fDatalayer_product_pageviews[sku_id]),",
    "        \"SkuNome\",",
    "            COALESCE(",
    "                LOOKUPVALUE(",
    "                    dProdutos[sku_name],",
    "                    dProdutos[sku_id],",
    "                    fDatalayer_product_pageviews[sku_id]",
    "                ),",
    "                FORMAT(fDatalayer_product_pageviews[sku_id], \"0\")",
    "            ),",
    "        \"Views\", [Quantidade de pageviews de produto do cliente no mês atual]",
    "    )",
    "",
    "VAR _tFiltrada =",
    "    FILTER(_t, [Views] > 0)",
    "",
    "VAR _top =",
    "    TOPN(",
    "        20,",
    "        _tFiltrada,",
    "        [Views], DESC,",
    "        [SkuNome], ASC",
    "    )",
    "",
    "RETURN",
    "CONCATENATEX(",
    "    _top,",
    "    \"➜ \"",
    "        & [SkuNome]",
    "        & \" (\"",
    "        & FORMAT([Views], \"#,0\")",
    "        & \" \"",
    "        & IF([Views] = 1, \"visualização\", \"visualizações\")",
    "        & \")\",",
    "    UNICHAR(10) & UNICHAR(10),",
    "    [Views],",
    "    DESC",
    ")",
    ""
  ],
  "lineageTag": "eb203f72-86ab-4dda-88ad-1f5bdd2ec9a9"
}